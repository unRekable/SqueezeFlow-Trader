# Test Dockerfile for SqueezeFlow Trader
# Optimized for running integration tests with all dependencies

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV DOCKER_ENV=true

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional test dependencies
RUN pip install --no-cache-dir \
    pytest>=7.0 \
    pytest-asyncio>=0.21 \
    pytest-cov>=4.0 \
    pytest-xdist>=3.0 \
    pytest-timeout>=2.1 \
    pytest-mock>=3.10 \
    coverage>=7.0 \
    psutil>=5.9 \
    matplotlib>=3.7 \
    fastapi>=0.100 \
    uvicorn>=0.23

# Copy project files
COPY . .

# Create necessary directories
RUN mkdir -p data/logs data/test_results data/charts tests

# Set permissions
RUN chmod +x tests/run_integration_tests.py

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import redis; redis.Redis(host='redis-test', port=6379).ping()" || exit 1

# Default command (can be overridden)
CMD ["python", "tests/run_integration_tests.py", "--verbose"]